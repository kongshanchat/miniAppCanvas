.save{
  width: 720rpx;
  margin: 40px auto;
  height:44px;
  line-height: 44px;
  color:#fff;
  background: palegreen;
  border-radius: 8px;
  text-align: center
}
.alertShare{
  position: absolute;
  top: 0;
  width:100vw;
  height: 100vh;
  background: rgba(0, 0, 0, .6);
  z-index: 99;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center
}
canvas{
  background: #fff;
  width:680rpx;height:810rpx;margin:0 auto;border-top-left-radius:10px;
  border-top-right-radius:10px;
}
.tip{
  height:50px;
  line-height: 50px;
  color: #a5a5a5;
  text-align: center;
  width:680rpx;
  margin:0 auto;
  background: #fff;
  font-size:28rpx;
}
.close{
  border-top: 1rpx solid #d8d8d8;
  height:40px;
  line-height: 40px;
  color: #5a5a5a;
  text-align: center;
  width:680rpx;
  margin:0 auto;
  background: #fff;
  font-size:28rpx;
  border-bottom-right-radius:10px;
  border-bottom-left-radius:10px;
}